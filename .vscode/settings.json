// Place your settings in this file to overwrite default and user settings.
{
    "editor.fontSize": 10,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "node_modules": true,
        "deploy": true,
        "**/*.js": { "when": "$(basename).ts"},
        "**/*.css": {"when": "$(basename).less"},
        "**/*-min.css": true,
        "**/*.map": true
    },
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 2000
}